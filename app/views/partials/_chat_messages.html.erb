<ul>
  <% @conversation && @conversation.receipts_for(current_user).order(:updated_at).each do |receipt| %>
      <% if receipt.message.sender.id == current_user.id %>
          <li class="sent">
            <%= image_tag current_user.employer.latest_image, class: "online", id: "profile-img" %>
            <p><%= receipt.message.body %></p>
          </li>
      <% else %>
          <li class="replies">
            <%= image_tag receipt.message.sender.employer.latest_image, class: "online", id: "profile-img" %>
            <p><%= receipt.message.body %></p>
          </li>
      <% end %>
  <% end %>
</ul>