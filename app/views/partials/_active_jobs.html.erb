                              </ul>
                            </div>
                            <div class="item-title">
                              <h3><a href="#"><%= job.name %></a></h3>
                            </div>
                            <div class="item-info">
                              <p><%= job.description %></p>
                            </div>
                          </div>
                        </div>
                      </li>
                  <% end %>
              <% end %>
            </ul>
          </div><!-- tab-pane -->

