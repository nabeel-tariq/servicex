<% profile= @employer ||= @contractor %>
<div class="avt-post-wrapper">
  <div class="container">
      <div class="avt-post col-sm-12">
        <%= form_for setup_profileable_model(profile) do |f| %>
            <fieldset>
              <div class="product-section avtpost-fields">
                <div class="row">
                  <%= f.nested_fields_for :contractor_services do |ff| %>
                      <%= ff.remove_nested_fields_link %>
                      <%= ff.hidden_field :contractor_id, value: @contractor.id %>
                      <%= ff.text_field :service_id %>

                      <div class=" "></div>
                  <% end %>
                  <%= f.add_nested_fields_link :contractor_services %>
                </div>
              </div>
              <div class="submit-section text-center">
                <div class="submit-button">
                  <%= f.submit "Save" , :class => 'btn btn-primary'%>
                </div>
              </div>
            </fieldset>
        <% end %>

        <%profile.contractor_services.map &:initialize_nested%>
        <%= profile.contractor_services.each do |c_service|%>
        Name: <%=c_service.service.name%>
            <div id="contactor_service_<%=c_service.id %>">
                <%= render partial: 'partials/contractor_service' ,locals:  {c_service: c_service}%>
            </div>
        <% end %>
      </div>
  </div>
</div>