<% content_for :javascripts do %>
    <%= javascript_include_tag 'technician' %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="category-adds">
        <div class="category-tab">
          <div class="tab-content list-view-tab">
            <ul>
              <li class="item-wrap">
                <div class="item">
                  <div class="col-sm-3 p0">
                  <div class="item-image">
                    <a href=""><%= image_tag @contractor.latest_image %></a>
                  </div>
                  </div>
                  <div class="col-sm-9 p0">
                  <div class="item-description">
                    <div class="item-meta">
                      <div class="item-post-date">
                        <span>Today, 12:29 pm</span>
                      </div>
                      <ul class="list-inline product-social">
                        <li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-share-alt" aria-hidden="true"></i></a></li>
                      </ul>
                    </div>
                    <div class="item-title">
                      <h5><span><i class="fa fa-user pr"></i></span><a href="#"><%= @contractor.full_name %></a></h5>
                      <h5><span><i class="fa fa-envelope-o pr"></i></span><a href="#"><%= @contractor.user.email %></a></h5>
                    </div>
                    <div class="item-info pl">
                      <p class="pl-lg">Duis autem vel eum iriure dolor in hendrerit in vulputate velit.</p>
                    </div>
                  </div>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="card">
        <ul class="nav nav-tabs nav-tab nav-justified" id="myTab">
          <li class="active"><a class="tab-btn" href="#profile" data-toggle="tab">Profile</a></li>
          <li><a class="tab-btn" href="#services" data-toggle="tab">Services</a></li>
          <li><a class="tab-btn" href="#technicians" data-toggle="tab" onclick="hide()">Technicians</a></li>
        </ul>
        <%if @contractor %>
            <div class="tab-content">
              <div class="tab-pane fade in active" id="profile">
                <%= render "partials/complete_information_form", locals: { user: @contractor }%>
              </div>

              <div class="tab-pane fade" id="services">
                <%= render "partials/contractor_services_form", locals: { user: @contractor }%>
              </div>

              <div class="tab-pane fade" id="technicians">
                <div class="submit-section text-center pull-left">
                  <button type="button" class="btn btn-primary" onclick="show_hide_technician_form()"><i class="fa fa-plus" aria-hidden="true"></i></button>
                </div>
                <div class="col-sm-12" id="technician_listing">
                  <div class="category-adds">
                    <div class="category-tab">
                      <div class="tab-content list-view-tab">
                        <div id="technicians_listing">
                          <%= render 'partials/technician_listing', locals: {technicians: @contractor.technicians} %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <%= render "partials/technician_form", locals: { user: @technician }%>
              </div>
            </div>
        <%end%>
      </div>
    </div>
  </div>
</div>