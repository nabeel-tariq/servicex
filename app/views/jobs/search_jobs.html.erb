<div class="col-sm-12 p0 search-container">
<div id="search-section">
  <div class="container">
    <div class="search-section mt">
      <%= render partial: "partials/search_filters" %>
    </div>
  </div>
</div>
<div class="all-categories section">
  <div class="container">
      <div class="col-md-12 col-sm-12">
        <div class="category-adds">
          <div id="category-tab">
            <div class="tab-view">
              <ul class="list-inline">
                <li class="grid-view-tab"><i class="fa fa-th-large" aria-hidden="true"></i></li>
                <li class="small-view-tab "><i class="fa fa-th" aria-hidden="true"></i></li>
                <li class="list-view-tab active"><i class="fa fa-th-list" aria-hidden="true"></i></li>
              </ul>
            </div>
            <div class="category-tab">
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#recent" aria-controls="recent" role="tab" data-toggle="tab">Recent</a></li>
                <li role="presentation"><a href="#popular" aria-controls="popular" role="tab" data-toggle="tab">Popular</a></li>
                <li role="presentation"><a href="#Random" aria-controls="Random" role="tab" data-toggle="tab">Random</a></li>
              </ul>
              <!-- Tab panes -->

              <div class="tab-content search-tab list-view-tab">
                <div role="tabpanel" class="tab-pane active" id="recent">
                  <ul>
                    <% @job_search_results.each do |job|%>
                        <%= link_to(job, target: '_blank') do %>
                            <li class="item-wrap">
                              <div class="item">
                                <div class="item-image">
                                  <%= image_tag job.latest_image, class: "img-responsive" %>
                                  <div class="item-price">
                                    <span><%= job.budget %></span>
                                  </div>
                                </div>
                                <div class="item-description">
                                  <div class="item-meta">
                                    <div class="item-post-date">
                                      <span><%= job.time %></span>
                                    </div>
                                    <ul class="list-inline product-social">
                                      <li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-share-alt" aria-hidden="true"></i></a></li>
                                    </ul>
                                  </div>
                                  <div class="item-title">
                                    <h3><a href="#"><%= job.name %></a></h3>
                                  </div>
                                  <div class="item-info">
                                    <p><%= job.description %></p>
                                  </div>
                                </div>
                              </div>
                            </li>
                        <% end %>
                    <% end %>
                  </ul>
                </div> <!--tab-pane-->

                <div role="tabpanel" class="tab-pane" id="popular">
                  <ul>
                    <% @job_search_results.each do |job|%>
                        <%= link_to(job, target: '_blank') do %>
                            <li class="item-wrap">
                              <div class="item">
                                <div class="item-image">
                                  <%= image_tag job.latest_image, class: "img-responsive" %>
                                  <div class="item-price">
                                    <span><%= job.budget %></span>
                                  </div>
                                </div>
                                <div class="item-description">
                                  <div class="item-meta">
                                    <div class="item-post-date">
                                      <span><%= job.time %></span>
                                    </div>
                                    <ul class="list-inline product-social">
                                      <li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-share-alt" aria-hidden="true"></i></a></li>
                                    </ul>
                                  </div>
                                  <div class="item-title">
                                    <h3><a href="#"><%= job.name %></a></h3>
                                  </div>
                                  <div class="item-info">
                                    <p><%= job.description %></p>
                                  </div>
                                </div>
                              </div>
                            </li>
                        <% end %>
                    <% end %>
                  </ul>
                </div><!-- tab-pane -->

                <div role="tabpanel" class="tab-pane" id="Random">
                  <ul>
                    <% @job_search_results.each do |job|%>
                        <%= link_to(job, target: '_blank') do %>
                            <li class="item-wrap">
                              <div class="item">
                                <div class="item-image">
                                  <%= image_tag job.latest_image, class: "img-responsive" %>
                                  <div class="item-price">
                                    <span><%= job.budget %></span>
                                  </div>
                                </div>
                                <div class="item-description">
                                  <div class="item-meta">
                                    <div class="item-post-date">
                                      <span><%= job.time %></span>
                                    </div>
                                    <ul class="list-inline product-social">
                                      <li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                      <li><a href="#"><i class="fa fa-share-alt" aria-hidden="true"></i></a></li>
                                    </ul>
                                  </div>
                                  <div class="item-title">
                                    <h3><a href="#"><%= job.name %></a></h3>
                                  </div>
                                  <div class="item-info">
                                    <p><%= job.description %></p>
                                  </div>
                                </div>
                              </div>
                            </li>
                        <% end %>
                    <% end %>
                  </ul>
                </div><!-- tab-pane-->
              </div>
            </div>
          </div><!-- category-tab-->
        </div>
        <div class="pager-section">
          <ul class="pagination-job-serach">
            <%= paginate @job_search_results %>
          </ul>
        </div><!-- pager-section -->
      </div>
    </div>
  </div>
</div>