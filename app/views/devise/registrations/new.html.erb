<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="page">
      <div class="ad-post-wrapper section">
        <div class="container">
          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <div class="user-form">
                  <div class="post-inner choose-options">
                    <div class="row form-group">
                      <label class="col-md-12">User Type: </label>
                      <div class="col-md-12">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="choose-option">
                              <%= f.radio_button :profileable_type, 'employer', :checked => true %>
                              <label for="employer">Employer</label>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="choose-option">
                              <%= f.radio_button :profileable_type, 'contractor' %>
                              <label for="contractor">Merchant</label>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.hidden_field :account_stage, :value => "incomplete"%>
                    <%= f.text_field :first_name, autofocus: true , :class => 'form-control', :required => true, placeholder: "First Name"%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :last_name, autofocus: true , :class => 'form-control', :required => true, placeholder: "Last Name"%>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true , :class => 'form-control', :required => true, placeholder: "Email"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' , :required => true, placeholder: "Password"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autofocus: true , :class => 'form-control', :required => true, placeholder: "Password Confirmation"%>
                  </div>
                  <%= f.submit "Sign up" , :class => 'btn btn-primary'%>
              </div>
            </div>
          </div>
        </div>
      </div> <!-- ad-post -->
    </div>	<!-- page -->
<% end %>