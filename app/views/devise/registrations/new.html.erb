<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { "data-parsley-validate" => true }) do |f| %>
    <div class="page">
      <div class="ad-post-wrapper section">
        <div class="container">
          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <div class="user-form">
                  <div class="form-group">
                    <%= f.hidden_field :account_stage, :value => "incomplete"%>
                    <%= f.text_field :first_name, autofocus: true , :class => 'form-control', 'data-parsley-pattern': "/^[a-zA-Z]+$/" ,'data-parsley-required': "true", placeholder: "First Name",'data-parsley-trigger': "change"%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :last_name, autofocus: true , :class => 'form-control', 'data-parsley-pattern': "/^[a-zA-Z]+$/" ,'data-parsley-required': "true", placeholder: "Last Name",'data-parsley-trigger': "change"%>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true , :class => 'form-control','data-parsley-type': "email",'data-parsley-required': "true", placeholder: "Email",'data-parsley-trigger': "change"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' ,'data-parsley-required': "true", placeholder: "Password"%>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autofocus: true , :class => 'form-control','data-parsley-required': "true", placeholder: "Password Confirmation"%>
                  </div>
                  <%= f.submit "Sign up" , :class => 'btn btn-primary'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>