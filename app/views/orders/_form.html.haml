= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :contractor
    = f.text_field :contractor
  .field
    = f.label :job
    = f.text_field :job
  .field
    = f.label :bidding
    = f.text_field :bidding
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
