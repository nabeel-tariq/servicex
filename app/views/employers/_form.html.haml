= form_for @employer do |f|
  - if @employer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@employer.errors.count, "error")} prohibited this employer from being saved:"
      %ul
        - @employer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :is_active
    = f.check_box :is_active
  .actions
    = f.submit 'Save'
